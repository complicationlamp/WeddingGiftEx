    <form action="/updateInfo" method="put">
        <label><%= user.email %></label>
        <div class="form-group">
            <label>Email</label>
            <input type="text" class="form-control" name="email">
        </div>
        <div class="form-group">
            <label>Name</label>
            <input type="text" class="form-control" name="firstnamelastname">
        </div>
        <div class="form-group">
                <label>Location</label>
